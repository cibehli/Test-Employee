@page
@model IndexModel
@{
	ViewData["Title"] = "Employees";
}


<!-- Latest compiled and minified CSS -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>

	$(document).ready(function () {
		$('#table').DataTable({
			order: [[4, 'desc']],
		});
	
	});
</script>
<div>
	<h2 class="display-4">List of Employees </h2>
	<a class="btn btn-primary btn-sm" href="/EmployeeForm">New Employee</a>


</div>

<table id="table" class="display" style="width:100%">
	<thead>
		<tr>
			<th>Name</th>
			<th>Last Name</th>
			<th>RFC</th>
			<th>Birthday</th>
			<th>Status</th>
			<th>Edit</th>
			<th>Delete</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listemployees)
		{
			<tr>
				<td>@item.ID</td>
				<td>@item.Name</td>
				<td>@item.LastName</td>
				<td>@item.RFC</td>
				<td>@item.BornDate</td>
				<td>@item.Status</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/EmployeeForm?id=@item.ID">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Delete?id=@item.ID">Delete</a>
				</td>

			</tr>
		}
	</tbody>


</table>
